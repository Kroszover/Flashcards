<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.yourproject.Flashcard" table="flashcard">
    <!-- class and table mapping -->
        <id name="id" column="id" type="int">
            <generator class="increment"/>
        </id>
        <property name="titulo" column="titulo" type="string" />
        <property name="descripcion" column="descripcion" type="string" />
        <property name="comentario" column="comentario" type="string" />
        <property name="tema" column="tema" type="string" />
        <property name="categoria" column="categoria" type="string" />
        <property name="id" column="id" type="integer" />
    </class>
</hibernate-mapping>
